{{# each listGames }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <div class="clearfix">
                            <div class="rating pull-left">Metacritic Score: {{ this.rating }}</div>
                            <a href="/add-to-wishlist/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Wishlist</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}