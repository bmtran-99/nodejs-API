{{# if this.products }}
    <div class="row">
                {{#each products}}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="{{ this.item.imagePath }}" alt="..." class="img-responsive">
                            <div class="caption">
                                <h3>{{ this.item.title }}</h3>
                                <div class="clearfix">
                                    <div class="rating pull-left">Metacritic Score: {{ this.item.rating }}</div>
                                    <a href="/remove/{{this.item._id}}" class="btn btn-success pull-right" role="button">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>It's empty here :( You have not added any game to your Wishlist!</h2>
        </div>
    </div>
{{/if}}